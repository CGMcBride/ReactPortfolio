{
	"name": "reactportfolio",
	"version": "1.0.0",
	"description": "",
	"main": "server.js",
	"scripts": {
		"start": "if-env NODE_ENV=production && npm run start:prod || echo 'This script is running on development mode' && npm run start:dev",
		"start:prod": "node server.js",
		"start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
		"client": "cd client && npm run start",
		"seed": "node scripts/seedDB.js",
		"install": "cd client && npm install",
		"build": "cd client && npm run build",
		"heroku-postbuild": "npm run build",
		"test": "npm run lint && cross-env NODE_ENV=test mocha -u tdd --reporter spec --exit",
		"lint": "eslint \"**/*.js\"",
		"fix": "eslint --fix ."
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/CGMcBride/ReactPortfolio.git"
	},
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/CGMcBride/ReactPortfolio/issues"
	},
	"homepage": "https://github.com/CGMcBride/ReactPortfolio#readme",
	"dependencies": {
		"express": "^4.17.1"
	},
	"devDependencies": {
		"concurrently": "^5.3.0",
		"if-env": "^1.0.4",
		"nodemon": "^2.0.4"
	}
}
